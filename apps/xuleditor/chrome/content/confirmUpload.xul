<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://qsos-xuled/locale/confirmUpload.dtd">

<dialog id="confirm" title="&confirmUpload;"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        buttons="accept,cancel" onload="init();" ondialogaccept="ok();"
        ondialogcancel="cancel();">

  <script type="application/x-javascript">
  function init() {
    document.getElementById("filenameTextbox").value = window.arguments[0].filename;
    document.getElementById("urlTextbox").value = window.arguments[0].url;
  }

  function ok() {
    window.arguments[0].filename = document.getElementById("filenameTextbox").value;
    self.close();
  }

  function cancel() {
    window.arguments[0].err = true;
    self.close();
  }
  </script>

  <vbox>
    <label id="" value="&confirmUpload;"/>
    <textbox id="filenameTextbox" value=""/>
    <label id="" value="&confirmUrl;"/>
    <textbox id="urlTextbox" value=""/>
  </vbox>

</dialog>